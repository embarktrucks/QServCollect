FROM python:3

COPY requirements.txt .
RUN pip install -r requirements.txt --ignore-installed

WORKDIR /app/sour
# We need to redefine this because we're not actually installing
# the embark packages.
ENV PYTHONPATH "/usr/local/lib/python3.7/dist-packages::/app/sour"
ENV EMBARK_ENV "DEV"
